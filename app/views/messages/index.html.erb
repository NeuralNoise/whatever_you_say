<center>
<h2>Messages Log</h2>

<table align="center" width="500" bgcolor="#CCCCCC">
  <tr>
    <th>Sender</th>
    <th>Chat</th>
    <th>Source language</th>
  </tr>

<% for message in @messages %>
  <tr>

<!--<td><%=h message.sender_id %></td> -->
    <td><%= User.find(message.sender_id).login %>
    <td><%=h message.chat_id %></td>
    <td><%=h message.source_language_id %></td>
    <td><%= link_to 'Show', message %></td>
    <td><%= link_to 'Edit', edit_message_path(message) %></td>
    <td><%= link_to 'Destroy', message, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New message', new_message_path %>
</center>