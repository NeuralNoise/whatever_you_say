
<h2><img style="width: 80px; height: 80px;" alt="WUS" title="WUS" src="/images/WUS_logo.jpg" align="middle">  Whatever You Say v1.0</h2>

<div align=right>
<% if logged_in? %>
  <%= link_to 'Logout', logout_path %>
<% end %><p>

<%= link_to 'Edit My Profile', edit_user_path(:action => 'edit', :id => session[:user_id]) %>
</div>

<h1>Currently Active Chats</h1>

<table>
  <tr>
    <th>With</th>
  </tr>
<% for chat in @chats %>
  <tr>
    <td><%= !session[:user_id].nil? ? (chat.user_id == session[:user_id] ? chat.receiver.login : chat.user.login) : "#{chat.user.login} > #{chat.receiver.login}" %></td>
    <td><%= link_to 'Show', chat %></td>
    <td><%= link_to 'End', chat, :confirm => 'Are you sure you want to delete this chat?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New chat', new_chat_path %>
