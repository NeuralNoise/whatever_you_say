<h1>New buddy</h1>

<% form_for(@buddy) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :buddy_group_id %><br />
    <%= collection_select(:buddy, :buddy_group_id, @user.buddy_groups, "id", "name") %>
  </p>
  <p>
    <%= label_tag :user %><br />
    <%= text_field_tag :user %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', buddies_path %>